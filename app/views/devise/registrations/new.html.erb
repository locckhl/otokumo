<div class="sign section--bg" data-bg="img/section/section.jpg" style="margin-top:50px">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="sign__content">
						<!-- registration form -->
						<!--<form action="#" class="sign__form">-->
        				<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => "sign__form new_user"} ) do |f| %>
        				  <%= render "devise/shared/error_messages", resource: resource %>
        					<!--<a href="index.html" class="sign__logo">-->
        					<!--	<img src="img/logo.svg" alt="">-->
        					<!--</a>-->
        					<%= link_to root_path, :class => "sign__logo" do %>	
        						<%= image_pack_tag "img/logo.svg" %>
        					<% end %>
							
                  
                              <div class="field sign__group">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "sign__input" %>
                              </div>
                              
                              <div class="field sign__group">
                                <% if @minimum_password_length %>
                                <em style="color:white">(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password", :class => "sign__input" %>
                              </div>
                            
                              <div class="field sign__group">
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", :class => "sign__input" %>
                              </div>
                  
    							<!--<div class="sign__group">-->
    							<!--	<input type="text" class="sign__input" placeholder="Name">-->
    							<!--</div>-->
    
    							<div class="sign__group sign__group--checkbox">
    								<input id="remember" name="remember" type="checkbox" checked="checked">
    								<label for="remember">I agree to the <a href="#">Privacy Policy</a></label>
    							</div>
    							
    						  <div class="actions", style="width:100%">
                                <%= f.submit 'Sign up', :style => "transition: 0.4s ease;cursor: pointer;border:none", :class => "sign__btn" %>
                              </div>
							

							<span class="sign__text">Already have an account? <%= link_to 'Sign In', new_user_session_path %></span>
						<!--</form>-->
						<% end %>
						<!-- registration form -->
						<!--<%= render "devise/shared/links" %>-->
					</div>
				</div>
			</div>
		</div>
	</div>
